<UserControl
    x:Class="Warehouse_Management.View.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Warehouse_Management.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="600"
    mc:Ignorable="d">
    
    <Grid Width="400" Background="{DynamicResource MaterialDesignBody}">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            Style="{StaticResource MaterialDesignHeadline4TextBlock}">
            Magazyn Katowice
        </TextBlock>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignHeadline5TextBlock}">
                Products
            </TextBlock>
            <Grid>
                <ListView ItemsSource="{Binding Products}" Foreground="Black" Style="{DynamicResource MaterialDesignListView}"
                        ItemContainerStyle="{DynamicResource MaterialDesignGridViewItem}">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="80"
                                DisplayMemberBinding="{Binding Name}"
                                Header="Name" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding Quantity}"
                                Header="Quantity" />

                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
