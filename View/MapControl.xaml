<UserControl x:Class="Warehouse_Management.View.MapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resx="clr-namespace:Warehouse_Management.Properties"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="750">

    <UserControl.Resources>
    </UserControl.Resources>

    <Grid>

        <Canvas x:Name="OknoMapy" Height="800" Width="750">
            <Image Source="{
                Binding Path=MapImage,
                Mode=TwoWay,
                UpdateSourceTrigger=PropertyChanged,
                RelativeSource=
                {
                    RelativeSource Mode=FindAncestor,
                    AncestorType={x:Type UserControl}
                }
                        }"
                Stretch="None" />
        </Canvas>
    </Grid>
</UserControl>